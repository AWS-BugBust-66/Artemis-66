<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet author="alexander.malyuk" id="20210822111500">

        <!-- Introduction of user option -->
        <createTable tableName="user_option">
            <!--  <column name="id" type="bigint" autoIncrement="${autoIncrement}"> -->
            <column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_optionPK"/>
            </column>
            <column name="option_specifier" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="webapp" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="BIT(1)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
            baseTableName="user_option"
            baseColumnNames="user_id"
            constraintName="fk_user_option_user_id"
            deferrable="false"
            referencedColumnNames="id"
            referencedTableName="jhi_user"
        />
        <addUniqueConstraint
            tableName="user_option"
            columnNames="user_id, option_specifier"
            constraintName="UKuserOptionTableUserIdOptionSpecifier"
        />
    </changeSet>
</databaseChangeLog>
