<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity DragAndDropAssignment.
    -->
    <changeSet id="20171130173558-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="drag_and_drop_assignment"
                                 constraintName="fk_drag_and_drop_assignment_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="drag_item"/>

        <addForeignKeyConstraint baseColumnNames="location_id"
                                 baseTableName="drag_and_drop_assignment"
                                 constraintName="fk_drag_and_drop_assignment_location_id"
                                 referencedColumnNames="id"
                                 referencedTableName="drop_location"/>

        <addForeignKeyConstraint baseColumnNames="submitted_answer_id"
                                 baseTableName="drag_and_drop_assignment"
                                 constraintName="fk_drag_and_drop_assignment_submitted_answer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="drag_and_drop_submitted_answer"/>

    </changeSet>
</databaseChangeLog>
