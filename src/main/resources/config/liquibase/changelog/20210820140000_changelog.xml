    <changeSet author="alexander.malyuk" id="20210820140000">

        <!-- Introduction of user option -->
        <createTable tableName="user_option">
            <!--  <column name="id" type="bigint" autoIncrement="${autoIncrement}"> -->
            <column name="id" type="BIGINT" autoIncrement="${autoIncrement}">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_optionPK"/>
            </column>
            <column name="settings_category" type="VARCHAR(255)"/>
            <column name="option_group" type="VARCHAR(255)"/>
            <column name="option_name" type="VARCHAR(255)"/>
            <column name="option_description" type="VARCHAR(500)"/>
            <column name="webapp" type="BIT(1)"/>
            <column name="email" type="BIT(1)"/>
            <column name="user_id" type="BIGINT"/>
        </createTable>
