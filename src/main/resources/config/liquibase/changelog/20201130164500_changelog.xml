<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="stefanwaldhauser" id="20201130164500">
        <createTable tableName="student_score">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="student_scorePK"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="exercise_id" type="BIGINT"/>
            <column name="last_result_id" type="BIGINT"/>
            <column name="last_rated_result_id" type="BIGINT"/>
            <column name="last_score" type="BIGINT"/>
            <column name="last_rated_score" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="exercise_id" baseTableName="student_score" constraintName="fk_student_score_exercise_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="exercise"/>
        <addForeignKeyConstraint baseColumnNames="last_result_id" baseTableName="student_score" constraintName="fk_student_score_last_result_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="result"/>
        <addForeignKeyConstraint baseColumnNames="last_rated_result_id" baseTableName="student_score" constraintName="fk_student_score_last_rated_result_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id" referencedTableName="result"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="student_score" constraintName="fk_student_score_user_id" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="jhi_user"/>
    </changeSet>
</databaseChangeLog>
